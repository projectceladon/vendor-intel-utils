From: shivasku82 <shiva.kumara.rudrappa@intel.com>
Date: Thu, 24 Aug 2023 13:45:33 +0530
Subject: [PATCH] add ivi camera service

---
 groups/camera-ext/ivi/product.mk                          | 2 +-
 groups/device-specific/celadon_ivi/framework_manifest.xml | 2 +-
 groups/device-specific/celadon_ivi/manifest.xml           | 3 +--
 3 files changed, 3 insertions(+), 4 deletions(-)

diff --git a/groups/camera-ext/ivi/product.mk b/groups/camera-ext/ivi/product.mk
index 2beb836..3688f9a 100644
--- a/groups/camera-ext/ivi/product.mk
+++ b/groups/camera-ext/ivi/product.mk
@@ -6,7 +6,7 @@ PRODUCT_COPY_FILES += \
 
 
 # External camera service
-PRODUCT_PACKAGES += android.hardware.camera.provider@2.4-external-service \
+PRODUCT_PACKAGES += android.hardware.camera.provider@2.4-ivi-service \
                     android.hardware.camera.provider@2.4-impl
 
 
diff --git a/groups/device-specific/celadon_ivi/framework_manifest.xml b/groups/device-specific/celadon_ivi/framework_manifest.xml
index a59d4d7..fdbcfea 100644
--- a/groups/device-specific/celadon_ivi/framework_manifest.xml
+++ b/groups/device-specific/celadon_ivi/framework_manifest.xml
@@ -177,7 +177,7 @@
         <version>2.4</version>
         <interface>
             <name>ICameraProvider</name>
-            <instance>external/0</instance>
+            <instance>ivi/0</instance>
         </interface>
     </hal>
     <hal format="hidl">
diff --git a/groups/device-specific/celadon_ivi/manifest.xml b/groups/device-specific/celadon_ivi/manifest.xml
index ad5b30f..3128a37 100644
--- a/groups/device-specific/celadon_ivi/manifest.xml
+++ b/groups/device-specific/celadon_ivi/manifest.xml
@@ -133,8 +133,7 @@
         <version>2.4</version>
         <interface>
             <name>ICameraProvider</name>
-            <instance>external/0</instance>
-            <instance>legacy/0</instance>
+            <instance>ivi/0</instance>
         </interface>
     </hal>
     <hal format="hidl">
