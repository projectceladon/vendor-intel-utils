 opengl/libs/EGL/egl_display.cpp          |  4 +++-
 opengl/libs/EGL/egl_display.h            |  1 +
 opengl/libs/EGL/egl_object.cpp           |  2 ++
 opengl/libs/EGL/egl_object.h             |  2 ++
